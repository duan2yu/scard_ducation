<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>冷藏车物流管理系统</title>
	<link href="css/css-login.css" rel="stylesheet" type="text/css" />
	<script language="javascript" src="/CCMS/js/jquery-1.6.min.js"></script>
	<link type="text/css" rel="stylesheet" href="/CCMS/css/validationEngine.jquery.css" />
<script type="text/javascript" src="/CCMS/js/jquery.validationEngine-zh_CN.js"></script>
<script type="text/javascript" src="/CCMS/js/jquery.validationEngine.js"></script> 
	<script type="text/javascript">
	$( function() {
		$("#lmsrvlogin").validationEngine({
			validationEventTrigger : "blur"
			});
	});
	
	function replaceCode()
	{
		d = new Date();
		document.getElementById('picsss').src = 'verify_code.jsp?a=' + d;
	};

	function initLogin()
	{
		var validateCode = document.getElementById("validateCode").value;
		if (validateCode=="验证码错误")
		{
			document.getElementById("securityCode").focus();
		}
		else
		{
			document.getElementById("userLoginName").focus();
			document.getElementById("userLoginName").select();
		}
	}
	</script>
</head>
  
<body onload="initLogin();" style="background:url(/CCMS/images/mainbgbg.jpg) #E1E1E1 repeat-x;">

<div class="main">
	<div class="login-area">
        <form action="login.action" method="post" id="lmsrvlogin">
		<ul class="login-item">
		  	<li><span>用户名：</span><input id="userLoginName" name="user.userLoginName" type="text" class="validate[required] ltxt" value="" /></li>
			<li><span>密&nbsp;&nbsp;&nbsp;&nbsp;码：</span><input id="userPwd" name="user.userPwd" type="password" class="validate[required] ltxt" value="" onbeforepaste="clipboardData.setData('text',clipboardData.getData('text').replace(/[^\d]/g,''))" autocomplete="off" ondragenter="javascript:return false;" onpaste="return false" /></li>
			<li><span>验证码：</span><input type="text" maxlength="4" id="securityCode" name="securityCode" class="validate[required] ltxt2" /> <img id="picsss" src="verify_code.jsp" class="code" title="更换验证码" onclick="replaceCode();" />&nbsp;&nbsp;&nbsp;&nbsp;<a href="javascript:replaceCode()">再换一张</a></li>
		</ul>
		<input type="submit" class="loginbtn" value="登录系统" />
		<input type="reset" class="exitbtn" value="取消" />
		<input type="hidden" id="validateCode" value=""/>
		<!---错误提示信息，默认不显示---->
		<p class="wrong-tip"></p>
        </form>
  </div>
</div>

</body>
</html>
